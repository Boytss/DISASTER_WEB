@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Resident Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <img src="~/logo/TayhiLogo.png" alt="Logo" />
                <span class="logo-text">Disaster Preparedness </span>
            </div>
            <div class="menu">
           
            
               
            </div>
        </nav>
    </header>

    <main>
        <section class="login-section animate__animated animate__fadeInUp">
            @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
            <h2>Login</h2>
            <form method="post">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="email" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required />
                </div>
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <button type="submit" class="btn">Login</button>
            </form>
            <p>Already have an account? <a asp-action="Register">Register</a></p>
        </section>
    </main>

    <footer>
        <p>Â© 2024 Tayhi Resident Dashboard. All rights reserved.</p>
    </footer>
</body>
</html>